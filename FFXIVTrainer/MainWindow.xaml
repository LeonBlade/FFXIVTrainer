<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		x:Class="FFXIVTrainer.MainWindow"
		xmlns:Views="clr-namespace:FFXIVTrainer.Views"
		xmlns:ViewModels="clr-namespace:FFXIVTrainer.ViewModels"
        mc:Ignorable="d"
		x:Name="Window"
        Title="FFXIV Trainer" Height="486" Width="677">
	<Grid>
		<ComboBox IsEnabled="{Binding Path=EntityList.IsEnabled, UpdateSourceTrigger=Explicit}" ItemsSource="{Binding Path=EntityList.Names.Values}" SelectedItem="{Binding Path=EntityList.SelectedValue, UpdateSourceTrigger=PropertyChanged}" Width="200" Height="22" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
			<ComboBox.DataContext>
				<ViewModels:EntityListViewModel/>
			</ComboBox.DataContext>
		</ComboBox>
		<GroupBox Header="Basic" Margin="10,37,0,0" HorizontalAlignment="Left" Width="313" Height="200" VerticalAlignment="Top">
			<Views:CharacterView Margin="10,10,10,10" Width="Auto" Height="Auto"  />
		</GroupBox>
		<GroupBox Header="Bust" Margin="328,37,0,0" HorizontalAlignment="Left" Width="259" Height="200" VerticalAlignment="Top">
			<Views:BustView Height="Auto" Width="Auto" Margin="10,10,10,10"/>
		</GroupBox>
	</Grid>
</Window>
